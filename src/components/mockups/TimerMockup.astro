---
// Timer mockup based on real app - Active removal tracking
import PhoneFrame from './PhoneFrame.astro';
---

<PhoneFrame>
  <!-- Status bar -->
  <div class="bg-brand-800 px-6 py-3 flex items-center justify-between">
    <span class="text-white text-xs font-medium">19:59</span>
    <div class="flex items-center gap-1">
      <div class="w-4 h-2 bg-white/80 rounded-sm"></div>
      <div class="w-6 h-3 bg-white/60 rounded-sm text-[6px] text-center text-white/80">46</div>
    </div>
  </div>
  
  <!-- Header -->
  <div class="bg-gradient-to-b from-brand-800 to-brand-500 px-5 py-4">
    <div class="flex items-center gap-3">
      <div class="w-9 h-9 bg-white/20 rounded-full flex items-center justify-center">
        <svg width="18" height="18" viewBox="0 0 32 32" fill="none">
          <circle cx="12" cy="12" r="1.5" fill="white"/>
          <circle cx="20" cy="12" r="1.5" fill="white"/>
          <path d="M11 18c1.5 2 3.5 2 5 2s3.5 0 5-2" stroke="white" stroke-width="1.5" stroke-linecap="round"/>
        </svg>
      </div>
      <span class="text-white text-lg font-semibold">Hola, Agus</span>
    </div>
  </div>

  <!-- Timer card -->
  <div class="px-4 pt-4 pb-2 bg-neutral-50">
    <div class="bg-white rounded-2xl shadow-sm p-6">
      <!-- Timer circle -->
      <div class="flex justify-center mb-4">
        <div class="relative w-40 h-40">
          <svg class="w-full h-full -rotate-90" viewBox="0 0 100 100">
            <circle cx="50" cy="50" r="42" fill="none" stroke="#F3F4F6" stroke-width="6"/>
            <circle 
              cx="50" cy="50" r="42" 
              fill="none" 
              stroke="#10B981" 
              stroke-width="6" 
              stroke-linecap="round" 
              stroke-dasharray="264" 
              stroke-dashoffset="260"
            />
          </svg>
          <!-- Green dot at top -->
          <div class="absolute top-1 left-1/2 -translate-x-1/2 w-3 h-3 bg-success-500 rounded-full"></div>
          <div class="absolute inset-0 flex flex-col items-center justify-center">
            <span class="text-4xl font-bold text-neutral-900">1m 1s</span>
            <span class="text-neutral-500 text-sm">Tiempo Removidos</span>
          </div>
        </div>
      </div>

      <!-- Status badge -->
      <div class="flex justify-center mb-4">
        <div class="inline-flex items-center gap-1.5 bg-warning-50 text-warning-600 px-4 py-2 rounded-full text-sm font-medium">
          <div class="w-2 h-2 bg-warning-500 rounded-full"></div>
          Actualmente Removidos
        </div>
      </div>

      <!-- Stop button -->
      <button class="w-full bg-neutral-100 text-neutral-700 font-semibold py-4 rounded-xl flex items-center justify-center gap-2 mb-2">
        <div class="w-4 h-4 bg-neutral-700 rounded-sm"></div>
        Poner Alineadores
      </button>
      
      <button class="w-full text-brand-500 text-sm font-medium py-2 flex items-center justify-center gap-1">
        Ocultar sesiones de hoy
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Today's sessions -->
  <div class="px-4 py-3 bg-neutral-50 flex-1">
    <div class="bg-white rounded-2xl shadow-sm p-4">
      <div class="flex items-center justify-between mb-3">
        <div class="flex items-center gap-2">
          <div class="w-7 h-7 bg-brand-50 rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-brand-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <span class="font-semibold text-neutral-900">Sesiones de Hoy</span>
        </div>
        <span class="text-neutral-400 text-sm">1 completadas</span>
      </div>
      
      <!-- Session item -->
      <div class="bg-neutral-50 rounded-xl p-3">
        <div class="flex items-center justify-between mb-2">
          <span class="font-medium text-neutral-900">7:57 PM - 7:58 PM</span>
          <span class="text-neutral-500 text-sm">1 minutos</span>
        </div>
        <p class="text-neutral-400 text-xs mb-2">Comenz√≥ 25 Dec 2025</p>
        <div class="flex gap-2">
          <button class="flex items-center gap-1 text-neutral-600 text-xs px-3 py-1.5 bg-white rounded-lg border border-neutral-200">
            <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
            </svg>
            Editar
          </button>
          <button class="flex items-center gap-1 text-danger-500 text-xs px-3 py-1.5 bg-danger-50 rounded-lg">
            <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
            Eliminar
          </button>
        </div>
      </div>
    </div>
  </div>
</PhoneFrame>
