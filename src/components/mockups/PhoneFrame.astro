---
// Reusable phone frame component
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<div class={`relative ${className}`}>
  <!-- Phone frame -->
  <div class="w-72 md:w-80 bg-neutral-900 rounded-[3rem] p-3 shadow-2xl">
    <!-- Screen area -->
    <div class="bg-white rounded-[2.5rem] overflow-hidden aspect-[9/19.5]">
      <slot />
    </div>
    
    <!-- Home indicator -->
    <div class="absolute bottom-6 left-1/2 -translate-x-1/2 w-32 h-1 bg-neutral-700 rounded-full"></div>
  </div>
  
  <!-- Side buttons decoration -->
  <div class="absolute right-0 top-24 w-1 h-12 bg-neutral-800 rounded-l-sm"></div>
  <div class="absolute left-0 top-20 w-1 h-8 bg-neutral-800 rounded-r-sm"></div>
  <div class="absolute left-0 top-32 w-1 h-16 bg-neutral-800 rounded-r-sm"></div>
</div>

