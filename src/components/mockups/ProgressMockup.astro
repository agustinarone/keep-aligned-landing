---
// Progress/Profile mockup based on real app
import PhoneFrame from './PhoneFrame.astro';
---

<PhoneFrame>
  <!-- Status bar -->
  <div class="bg-brand-800 px-6 py-3 flex items-center justify-between">
    <span class="text-white text-xs font-medium">19:57</span>
    <div class="flex items-center gap-1">
      <div class="w-4 h-2 bg-white/80 rounded-sm"></div>
      <div class="w-6 h-3 bg-white/60 rounded-sm text-[6px] text-center text-white/80">47</div>
    </div>
  </div>
  
  <!-- Header -->
  <div class="bg-gradient-to-b from-brand-800 to-brand-500 px-5 py-4">
    <div class="flex items-center gap-3">
      <div class="w-9 h-9 bg-white/20 rounded-full flex items-center justify-center">
        <svg width="18" height="18" viewBox="0 0 32 32" fill="none">
          <circle cx="12" cy="12" r="1.5" fill="white"/>
          <circle cx="20" cy="12" r="1.5" fill="white"/>
          <path d="M11 18c1.5 2 3.5 2 5 2s3.5 0 5-2" stroke="white" stroke-width="1.5" stroke-linecap="round"/>
        </svg>
      </div>
      <span class="text-white text-lg font-semibold">Perfil</span>
    </div>
  </div>

  <!-- Stats row -->
  <div class="bg-gradient-to-b from-brand-500 to-brand-400 px-4 pb-4">
    <div class="flex gap-2">
      <div class="bg-white/15 backdrop-blur-sm rounded-full px-3 py-1.5 flex items-center gap-1.5">
        <svg class="w-3 h-3 text-white/70" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        <span class="text-brand-100 font-semibold text-xs">17</span>
        <span class="text-white/60 text-[10px]">días de tratamiento</span>
      </div>
      <div class="bg-white/15 backdrop-blur-sm rounded-full px-3 py-1.5 flex items-center gap-1.5">
        <svg class="w-3 h-3 text-success-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span class="text-success-300 font-semibold text-xs">96%</span>
        <span class="text-white/60 text-[10px]">promedio</span>
      </div>
    </div>
  </div>

  <!-- Content -->
  <div class="px-4 py-4 space-y-3 bg-neutral-50 flex-1">
    <!-- User card -->
    <div class="bg-white rounded-2xl shadow-sm p-4">
      <div class="flex items-center gap-3">
        <div class="w-12 h-12 bg-neutral-200 rounded-full flex items-center justify-center">
          <svg class="w-6 h-6 text-neutral-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </div>
        <div class="flex-1">
          <p class="font-semibold text-neutral-900">Agus</p>
          <p class="text-neutral-400 text-xs">agustinaronec@gmail.com</p>
          <p class="text-neutral-400 text-xs">Keep Smiling · 1 de septiembre, 1992</p>
        </div>
        <svg class="w-5 h-5 text-neutral-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </div>
    </div>

    <!-- Config card -->
    <div class="bg-white rounded-2xl shadow-sm p-4">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 bg-neutral-100 rounded-xl flex items-center justify-center">
          <svg class="w-5 h-5 text-neutral-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </div>
        <div class="flex-1">
          <p class="font-semibold text-neutral-900">Configuración</p>
          <p class="text-neutral-400 text-xs">Alineador 12 · 14 días</p>
        </div>
        <svg class="w-5 h-5 text-neutral-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </div>
    </div>

    <!-- Reminders card -->
    <div class="bg-white rounded-2xl shadow-sm p-4">
      <div class="flex items-center gap-3 mb-3">
        <div class="w-10 h-10 bg-warning-50 rounded-xl flex items-center justify-center">
          <svg class="w-5 h-5 text-warning-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
          </svg>
        </div>
        <div class="flex-1">
          <p class="font-semibold text-neutral-900">Recordatorios</p>
          <p class="text-neutral-400 text-xs">Te avisamos cuando te quites los alineadores por más de este tiempo.</p>
        </div>
      </div>
      
      <!-- Time options -->
      <div class="flex items-center justify-between">
        <div class="flex flex-col items-center">
          <div class="w-4 h-4 rounded-full border-2 border-brand-500 bg-brand-500 mb-1"></div>
          <span class="text-brand-500 text-xs font-medium">15m</span>
        </div>
        <div class="flex-1 h-0.5 bg-neutral-200 mx-2"></div>
        <div class="flex flex-col items-center">
          <div class="w-4 h-4 rounded-full border-2 border-neutral-300 mb-1"></div>
          <span class="text-neutral-400 text-xs">30m</span>
        </div>
        <div class="flex-1 h-0.5 bg-neutral-200 mx-2"></div>
        <div class="flex flex-col items-center">
          <div class="w-4 h-4 rounded-full border-2 border-neutral-300 mb-1"></div>
          <span class="text-neutral-400 text-xs">45m</span>
        </div>
        <div class="flex-1 h-0.5 bg-neutral-200 mx-2"></div>
        <div class="flex flex-col items-center">
          <div class="w-4 h-4 rounded-full border-2 border-neutral-300 mb-1"></div>
          <span class="text-neutral-400 text-xs">60m</span>
        </div>
      </div>
    </div>

    <!-- Feedback card -->
    <div class="bg-white rounded-2xl shadow-sm p-4">
      <div class="flex items-center gap-3 mb-2">
        <div class="w-10 h-10 bg-brand-50 rounded-xl flex items-center justify-center">
          <svg class="w-5 h-5 text-brand-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>
        </div>
        <div>
          <p class="font-semibold text-neutral-900">¿Tenés sugerencias?</p>
          <p class="text-neutral-400 text-xs">Tu opinión nos ayuda a mejorar Keep Aligned.</p>
        </div>
      </div>
      <button class="w-full bg-brand-500 text-white font-medium py-2.5 rounded-xl flex items-center justify-center gap-2 text-sm">
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
        </svg>
        Enviar feedback
      </button>
    </div>
  </div>
</PhoneFrame>
