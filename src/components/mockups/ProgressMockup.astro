---
// Progress mockup showing aligner journey
import PhoneFrame from './PhoneFrame.astro';
---

<PhoneFrame>
  <!-- Status bar -->
  <div class="bg-white px-6 py-3 flex items-center justify-between border-b border-neutral-100">
    <span class="text-neutral-900 text-xs font-medium">9:41</span>
    <div class="flex items-center gap-1">
      <div class="w-4 h-2 bg-neutral-400 rounded-sm"></div>
      <div class="w-4 h-2 bg-neutral-300 rounded-sm"></div>
    </div>
  </div>
  
  <!-- Header -->
  <div class="bg-white px-5 py-4 border-b border-neutral-100">
    <h1 class="text-xl font-bold text-neutral-900">Tu Progreso</h1>
    <p class="text-neutral-500 text-sm">Seguimiento de alineadores</p>
  </div>

  <!-- Content -->
  <div class="px-4 py-4 bg-neutral-50 flex-1 overflow-y-auto">
    <!-- Main progress card -->
    <div class="bg-gradient-to-br from-brand-500 to-brand-600 rounded-2xl p-5 text-white mb-4">
      <div class="flex items-center justify-between mb-4">
        <div>
          <p class="text-brand-100 text-xs">Alineador actual</p>
          <p class="text-3xl font-bold">5 <span class="text-lg font-normal text-brand-200">de 20</span></p>
        </div>
        <div class="w-16 h-16 bg-white/20 rounded-2xl flex items-center justify-center">
          <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
        </div>
      </div>
      
      <!-- Progress bar -->
      <div class="h-3 bg-white/20 rounded-full overflow-hidden mb-2">
        <div class="h-full bg-white rounded-full transition-all" style="width: 25%"></div>
      </div>
      <div class="flex justify-between text-xs">
        <span class="text-brand-200">25% completado</span>
        <span class="text-brand-100">~15 alineadores restantes</span>
      </div>
    </div>

    <!-- Timeline -->
    <div class="bg-white rounded-xl shadow-sm p-4 mb-4">
      <h3 class="font-semibold text-neutral-900 mb-4">Historial de cambios</h3>
      
      <div class="space-y-4">
        <!-- Current -->
        <div class="flex gap-3">
          <div class="flex flex-col items-center">
            <div class="w-3 h-3 bg-brand-500 rounded-full ring-4 ring-brand-100"></div>
            <div class="w-0.5 h-full bg-neutral-200"></div>
          </div>
          <div class="pb-4">
            <p class="text-sm font-medium text-neutral-900">Alineador #5</p>
            <p class="text-xs text-neutral-500">Iniciado: 20 Dic 2024</p>
            <div class="mt-2 bg-brand-50 text-brand-700 text-xs px-2 py-1 rounded-full inline-block">
              En uso - Día 5 de 14
            </div>
          </div>
        </div>

        <!-- Past -->
        <div class="flex gap-3">
          <div class="flex flex-col items-center">
            <div class="w-3 h-3 bg-success-500 rounded-full"></div>
            <div class="w-0.5 h-full bg-neutral-200"></div>
          </div>
          <div class="pb-4">
            <p class="text-sm font-medium text-neutral-900">Alineador #4</p>
            <p class="text-xs text-neutral-500">6 Dic - 20 Dic 2024</p>
            <div class="mt-2 bg-success-50 text-success-700 text-xs px-2 py-1 rounded-full inline-block">
              Completado ✓
            </div>
          </div>
        </div>

        <div class="flex gap-3">
          <div class="flex flex-col items-center">
            <div class="w-3 h-3 bg-success-500 rounded-full"></div>
            <div class="w-0.5 h-full bg-neutral-200"></div>
          </div>
          <div class="pb-4">
            <p class="text-sm font-medium text-neutral-900">Alineador #3</p>
            <p class="text-xs text-neutral-500">22 Nov - 6 Dic 2024</p>
            <div class="mt-2 bg-success-50 text-success-700 text-xs px-2 py-1 rounded-full inline-block">
              Completado ✓
            </div>
          </div>
        </div>

        <div class="flex gap-3">
          <div class="flex flex-col items-center">
            <div class="w-3 h-3 bg-neutral-300 rounded-full"></div>
          </div>
          <div>
            <p class="text-sm text-neutral-400">Ver historial completo...</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Next change reminder -->
    <div class="bg-brand-50 border border-brand-100 rounded-xl p-4">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 bg-brand-100 rounded-full flex items-center justify-center">
          <svg class="w-5 h-5 text-brand-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
        <div>
          <p class="text-brand-900 font-medium text-sm">Próximo cambio</p>
          <p class="text-brand-600 text-xs">3 de Enero, 2025 (9 días)</p>
        </div>
      </div>
    </div>
  </div>
</PhoneFrame>

