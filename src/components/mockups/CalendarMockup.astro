---
// Calendar screen mockup showing compliance visualization
import PhoneFrame from './PhoneFrame.astro';
---

<PhoneFrame>
  <!-- Status bar -->
  <div class="bg-white px-6 py-3 flex items-center justify-between border-b border-neutral-100">
    <span class="text-neutral-900 text-xs font-medium">9:41</span>
    <div class="flex items-center gap-1">
      <div class="w-4 h-2 bg-neutral-400 rounded-sm"></div>
      <div class="w-4 h-2 bg-neutral-300 rounded-sm"></div>
    </div>
  </div>
  
  <!-- Header -->
  <div class="bg-white px-5 py-4 border-b border-neutral-100">
    <h1 class="text-xl font-bold text-neutral-900">Calendario</h1>
    <p class="text-neutral-500 text-sm">Tu progreso diario</p>
  </div>

  <!-- Calendar -->
  <div class="px-4 py-4 bg-neutral-50 flex-1">
    <!-- Month selector -->
    <div class="flex items-center justify-between mb-4">
      <button class="p-2 text-neutral-400">
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      </button>
      <span class="font-semibold text-neutral-900">Diciembre 2024</span>
      <button class="p-2 text-neutral-400">
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </button>
    </div>

    <!-- Calendar grid -->
    <div class="bg-white rounded-xl shadow-sm p-4">
      <!-- Days header -->
      <div class="grid grid-cols-7 gap-1 mb-2">
        {['D', 'L', 'M', 'M', 'J', 'V', 'S'].map(day => (
          <div class="text-center text-[10px] font-medium text-neutral-400 py-1">{day}</div>
        ))}
      </div>
      
      <!-- Days grid -->
      <div class="grid grid-cols-7 gap-1">
        <!-- Empty cells for alignment -->
        <div></div>
        
        <!-- Days with status -->
        {[
          { day: 1, status: 'success' },
          { day: 2, status: 'success' },
          { day: 3, status: 'success' },
          { day: 4, status: 'warning' },
          { day: 5, status: 'success' },
          { day: 6, status: 'success' },
          { day: 7, status: 'success' },
          { day: 8, status: 'success' },
          { day: 9, status: 'danger' },
          { day: 10, status: 'success' },
          { day: 11, status: 'success' },
          { day: 12, status: 'success' },
          { day: 13, status: 'warning' },
          { day: 14, status: 'success' },
          { day: 15, status: 'success' },
          { day: 16, status: 'success' },
          { day: 17, status: 'success' },
          { day: 18, status: 'success' },
          { day: 19, status: 'success' },
          { day: 20, status: 'success' },
          { day: 21, status: 'success' },
          { day: 22, status: 'success' },
          { day: 23, status: 'success' },
          { day: 24, status: 'success' },
          { day: 25, status: 'today' },
        ].map(({ day, status }) => (
          <div class={`aspect-square flex items-center justify-center rounded-lg text-xs font-medium
            ${status === 'success' ? 'bg-success-100 text-success-700' : ''}
            ${status === 'warning' ? 'bg-warning-100 text-warning-700' : ''}
            ${status === 'danger' ? 'bg-danger-100 text-danger-700' : ''}
            ${status === 'today' ? 'bg-brand-500 text-white ring-2 ring-brand-200' : ''}
          `}>
            {day}
          </div>
        ))}
        
        <!-- Future days -->
        {[26, 27, 28, 29, 30, 31].map(day => (
          <div class="aspect-square flex items-center justify-center rounded-lg text-xs text-neutral-300">
            {day}
          </div>
        ))}
      </div>
    </div>

    <!-- Legend -->
    <div class="flex items-center justify-center gap-4 mt-4">
      <div class="flex items-center gap-1.5">
        <div class="w-3 h-3 rounded bg-success-400"></div>
        <span class="text-[10px] text-neutral-500">+22h</span>
      </div>
      <div class="flex items-center gap-1.5">
        <div class="w-3 h-3 rounded bg-warning-400"></div>
        <span class="text-[10px] text-neutral-500">20-22h</span>
      </div>
      <div class="flex items-center gap-1.5">
        <div class="w-3 h-3 rounded bg-danger-400"></div>
        <span class="text-[10px] text-neutral-500">-20h</span>
      </div>
    </div>

    <!-- Monthly stats -->
    <div class="bg-white rounded-xl shadow-sm p-4 mt-4">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-neutral-500 text-[10px]">Promedio mensual</p>
          <p class="text-neutral-900 font-bold">21.5 horas/d√≠a</p>
        </div>
        <div class="text-right">
          <p class="text-neutral-500 text-[10px]">Cumplimiento</p>
          <p class="text-success-500 font-bold">92%</p>
        </div>
      </div>
    </div>
  </div>
</PhoneFrame>

