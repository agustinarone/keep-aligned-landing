---
// Calendar screen mockup based on real app - Month view
import PhoneFrame from './PhoneFrame.astro';
---

<PhoneFrame>
  <!-- Status bar -->
  <div class="bg-brand-800 px-6 py-3 flex items-center justify-between">
    <span class="text-white text-xs font-medium">19:56</span>
    <div class="flex items-center gap-1">
      <div class="w-4 h-2 bg-white/80 rounded-sm"></div>
      <div class="w-6 h-3 bg-white/60 rounded-sm text-[6px] text-center text-white/80">47</div>
    </div>
  </div>
  
  <!-- Header -->
  <div class="bg-gradient-to-b from-brand-800 to-brand-600 px-5 py-4">
    <div class="flex items-center gap-3">
      <div class="w-9 h-9 bg-white/20 rounded-full flex items-center justify-center">
        <svg width="18" height="18" viewBox="0 0 32 32" fill="none">
          <circle cx="12" cy="12" r="1.5" fill="white"/>
          <circle cx="20" cy="12" r="1.5" fill="white"/>
          <path d="M11 18c1.5 2 3.5 2 5 2s3.5 0 5-2" stroke="white" stroke-width="1.5" stroke-linecap="round"/>
        </svg>
      </div>
      <span class="text-white text-lg font-semibold">Calendario</span>
    </div>
  </div>

  <!-- View toggle -->
  <div class="bg-white px-4 pt-4">
    <div class="flex bg-neutral-100 rounded-xl p-1">
      <button class="flex-1 py-2 text-sm text-neutral-500 rounded-lg">Semana</button>
      <button class="flex-1 py-2 text-sm font-medium text-brand-600 bg-white rounded-lg shadow-sm">Mes</button>
    </div>
  </div>

  <!-- Month selector -->
  <div class="bg-white px-4 py-3">
    <div class="flex items-center justify-between">
      <button class="p-2 text-neutral-400">
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      </button>
      <span class="font-bold text-neutral-900">Diciembre 2025</span>
      <button class="p-2 text-neutral-400">
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Calendar grid -->
  <div class="bg-white px-3 pb-3 flex-1">
    <!-- Days header -->
    <div class="grid grid-cols-7 gap-1 mb-1">
      {['D', 'L', 'M', 'M', 'J', 'V', 'S'].map(day => (
        <div class="text-center text-[10px] font-medium text-neutral-400 py-1">{day}</div>
      ))}
    </div>
    
    <!-- Calendar days -->
    <div class="grid grid-cols-7 gap-1">
      <!-- Week 1: Dec starts on Monday -->
      <div class="aspect-square"></div>
      <div class="aspect-square flex flex-col items-center justify-center rounded-lg bg-success-50 text-success-700 text-xs font-medium">
        1<span class="text-[6px] mt-0.5">+</span>
      </div>
      <div class="aspect-square flex flex-col items-center justify-center rounded-lg bg-success-50 text-success-700 text-xs font-medium">
        2<span class="text-[6px] mt-0.5">+</span>
      </div>
      <div class="aspect-square flex flex-col items-center justify-center rounded-lg bg-success-50 text-success-700 text-xs font-medium">
        3<span class="text-[6px] mt-0.5">+</span>
      </div>
      <div class="aspect-square flex flex-col items-center justify-center rounded-lg ring-2 ring-brand-500 bg-white text-brand-600 text-xs font-bold">
        4<span class="text-[5px] bg-brand-500 text-white px-1 rounded mt-0.5">#11</span>
      </div>
      <div class="aspect-square flex flex-col items-center justify-center rounded-lg bg-success-50 text-success-700 text-xs font-medium">
        5<span class="text-[6px] mt-0.5">+</span>
      </div>
      <div class="aspect-square flex flex-col items-center justify-center rounded-lg bg-neutral-50 text-neutral-400 text-xs">6</div>
      
      <!-- Week 2 -->
      <div class="aspect-square flex flex-col items-center justify-center rounded-lg bg-neutral-50 text-neutral-400 text-xs">7</div>
      <div class="aspect-square flex flex-col items-center justify-center rounded-lg bg-success-50 text-success-700 text-xs font-medium">8</div>
      <div class="aspect-square flex flex-col items-center justify-center rounded-lg bg-success-50 text-success-700 text-xs font-medium">9</div>
      <div class="aspect-square flex flex-col items-center justify-center rounded-lg bg-danger-50 text-danger-600 text-xs font-medium">
        10<span class="w-1 h-1 bg-danger-500 rounded-full mt-0.5"></span>
      </div>
      <div class="aspect-square flex flex-col items-center justify-center rounded-lg bg-success-50 text-success-700 text-xs font-medium">11</div>
      <div class="aspect-square flex flex-col items-center justify-center rounded-lg bg-warning-50 text-warning-700 text-xs font-medium">
        12<span class="w-1 h-1 bg-warning-500 rounded-full mt-0.5"></span>
      </div>
      <div class="aspect-square flex flex-col items-center justify-center rounded-lg bg-warning-50 text-warning-700 text-xs font-medium">
        13<span class="w-1 h-1 bg-warning-500 rounded-full mt-0.5"></span>
      </div>
      
      <!-- Week 3 -->
      <div class="aspect-square flex flex-col items-center justify-center rounded-lg bg-neutral-50 text-neutral-400 text-xs">14</div>
      <div class="aspect-square flex flex-col items-center justify-center rounded-lg bg-success-50 text-success-700 text-xs font-medium">
        15<span class="w-1 h-1 bg-success-500 rounded-full mt-0.5"></span>
      </div>
      <div class="aspect-square flex flex-col items-center justify-center rounded-lg bg-success-50 text-success-700 text-xs font-medium">
        16<span class="w-1 h-1 bg-success-500 rounded-full mt-0.5"></span>
      </div>
      <div class="aspect-square flex flex-col items-center justify-center rounded-lg bg-warning-50 text-warning-700 text-xs font-medium">
        17<span class="w-1 h-1 bg-warning-500 rounded-full mt-0.5"></span>
      </div>
      <div class="aspect-square flex flex-col items-center justify-center rounded-lg ring-2 ring-brand-500 bg-white text-brand-600 text-xs font-bold">
        18<span class="text-[5px] bg-brand-500 text-white px-1 rounded mt-0.5">#12</span>
      </div>
      <div class="aspect-square flex flex-col items-center justify-center rounded-lg bg-success-50 text-success-700 text-xs font-medium">19</div>
      <div class="aspect-square flex flex-col items-center justify-center rounded-lg bg-neutral-50 text-neutral-400 text-xs">20</div>
      
      <!-- Week 4 -->
      <div class="aspect-square flex flex-col items-center justify-center rounded-lg bg-success-50 text-success-700 text-xs font-medium">
        21<span class="w-1 h-1 bg-success-500 rounded-full mt-0.5"></span>
      </div>
      <div class="aspect-square flex flex-col items-center justify-center rounded-lg bg-success-50 text-success-700 text-xs font-medium">
        22<span class="w-1 h-1 bg-success-500 rounded-full mt-0.5"></span>
      </div>
      <div class="aspect-square flex flex-col items-center justify-center rounded-lg bg-success-50 text-success-700 text-xs font-medium">
        23<span class="w-1 h-1 bg-success-500 rounded-full mt-0.5"></span>
      </div>
      <div class="aspect-square flex flex-col items-center justify-center rounded-lg bg-success-50 text-success-700 text-xs font-medium">
        24<span class="w-1 h-1 bg-success-500 rounded-full mt-0.5"></span>
      </div>
      <div class="aspect-square flex flex-col items-center justify-center rounded-full bg-brand-500 text-white text-xs font-bold">
        25<span class="w-1 h-1 bg-white rounded-full mt-0.5"></span>
      </div>
      <div class="aspect-square flex flex-col items-center justify-center rounded-lg text-neutral-300 text-xs">26</div>
      <div class="aspect-square flex flex-col items-center justify-center rounded-lg text-neutral-300 text-xs">27</div>
      
      <!-- Week 5 -->
      <div class="aspect-square flex flex-col items-center justify-center rounded-lg text-neutral-300 text-xs">28</div>
      <div class="aspect-square flex flex-col items-center justify-center rounded-lg text-neutral-300 text-xs">29</div>
      <div class="aspect-square flex flex-col items-center justify-center rounded-lg text-neutral-300 text-xs">30</div>
      <div class="aspect-square flex flex-col items-center justify-center rounded-lg text-neutral-300 text-xs">31</div>
    </div>
    
    <!-- Legend -->
    <div class="flex items-center justify-center gap-4 mt-3 pt-3 border-t border-neutral-100">
      <div class="flex items-center gap-1">
        <div class="w-2 h-2 rounded-full bg-success-500"></div>
        <span class="text-[9px] text-neutral-500">Excelente</span>
      </div>
      <div class="flex items-center gap-1">
        <div class="w-2 h-2 rounded-full bg-warning-500"></div>
        <span class="text-[9px] text-neutral-500">Bueno</span>
      </div>
      <div class="flex items-center gap-1">
        <div class="w-2 h-2 rounded-full bg-danger-500"></div>
        <span class="text-[9px] text-neutral-500">Mejorar</span>
      </div>
      <div class="flex items-center gap-1">
        <svg class="w-2 h-2 text-brand-500" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
        <span class="text-[9px] text-neutral-500">Cambio</span>
      </div>
    </div>
  </div>
</PhoneFrame>
