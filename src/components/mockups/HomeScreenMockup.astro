---
// Home screen mockup based on real app - Dashboard view
import PhoneFrame from './PhoneFrame.astro';
---

<PhoneFrame>
  <!-- Status bar -->
  <div class="bg-brand-800 px-6 py-3 flex items-center justify-between">
    <span class="text-white text-xs font-medium">19:56</span>
    <div class="flex items-center gap-1">
      <div class="w-4 h-2 bg-white/80 rounded-sm"></div>
      <div class="w-6 h-3 bg-white/60 rounded-sm text-[6px] text-center text-white/80">47</div>
    </div>
  </div>
  
  <!-- App header with gradient -->
  <div class="bg-gradient-to-b from-brand-800 to-brand-500 px-5 pt-2 pb-6 text-white">
    <div class="flex items-center gap-3 mb-4">
      <div class="w-9 h-9 bg-white/20 rounded-full flex items-center justify-center">
        <svg width="18" height="18" viewBox="0 0 32 32" fill="none">
          <circle cx="12" cy="12" r="1.5" fill="white"/>
          <circle cx="20" cy="12" r="1.5" fill="white"/>
          <path d="M11 18c1.5 2 3.5 2 5 2s3.5 0 5-2" stroke="white" stroke-width="1.5" stroke-linecap="round"/>
        </svg>
      </div>
      <span class="text-lg font-semibold">Hola, Agus</span>
    </div>
    
    <!-- Today stats row -->
    <p class="text-brand-200 text-[10px] mb-2">HOY</p>
    <div class="flex gap-2">
      <div class="bg-white/15 backdrop-blur-sm rounded-full px-3 py-1.5 flex items-center gap-1.5">
        <svg class="w-3 h-3 text-success-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span class="text-success-300 font-semibold text-xs">100%</span>
        <span class="text-white/60 text-[10px]">cumplimiento</span>
      </div>
      <div class="bg-white/15 backdrop-blur-sm rounded-full px-3 py-1.5 flex items-center gap-1.5">
        <svg class="w-3 h-3 text-white/60" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        <span class="text-brand-200 font-semibold text-xs">24h 0m</span>
        <span class="text-white/60 text-[10px]">uso</span>
      </div>
    </div>
  </div>

  <!-- Content area -->
  <div class="px-4 py-4 space-y-3 bg-neutral-50 flex-1">
    <!-- Aligner progress card -->
    <div class="bg-white rounded-2xl shadow-sm p-4">
      <div class="flex items-center justify-between mb-3">
        <div>
          <span class="text-neutral-900 font-bold">Alineador #12</span>
          <span class="text-neutral-400 text-sm"> de 18</span>
        </div>
      </div>
      
      <div class="flex items-baseline gap-2 mb-2">
        <span class="text-4xl font-bold text-brand-500">7</span>
        <div>
          <p class="text-neutral-500 text-xs font-medium uppercase tracking-wide">DÍAS RESTANTES</p>
          <p class="text-neutral-600 text-sm">Te quedan 7 días con este alineador.</p>
        </div>
      </div>
      
      <div class="h-2 bg-neutral-100 rounded-full overflow-hidden mb-1">
        <div class="h-full bg-brand-500 rounded-full" style="width: 50%"></div>
      </div>
      <p class="text-neutral-400 text-[10px] text-right">Día 7 de 14</p>
      
      <!-- Sub items -->
      <div class="mt-3 pt-3 border-t border-neutral-100 space-y-2">
        <div class="flex items-center gap-3">
          <div class="w-8 h-8 bg-brand-50 rounded-lg flex items-center justify-center">
            <svg class="w-4 h-4 text-brand-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
          <div>
            <p class="text-neutral-900 text-sm font-medium">Próximo cambio</p>
            <p class="text-neutral-500 text-xs">Jueves 1 De Enero</p>
          </div>
        </div>
        <div class="flex items-center gap-3">
          <div class="w-8 h-8 bg-brand-50 rounded-lg flex items-center justify-center">
            <svg class="w-4 h-4 text-brand-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
            </svg>
          </div>
          <div>
            <p class="text-neutral-900 text-sm font-medium">Progreso de Tratamiento</p>
            <p class="text-neutral-500 text-xs">67% completado · Alineador 12 de 18</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Timer card -->
    <div class="bg-white rounded-2xl shadow-sm p-4">
      <div class="text-center">
        <p class="text-3xl font-bold text-neutral-900 mb-1">0 minutos</p>
        <p class="text-neutral-500 text-xs mb-3">Última Sesión</p>
        <div class="inline-flex items-center gap-1.5 bg-success-50 text-success-600 px-3 py-1 rounded-full text-xs font-medium">
          <div class="w-2 h-2 bg-success-500 rounded-full"></div>
          Actualmente Puestos
        </div>
      </div>
      <button class="w-full mt-4 bg-brand-50 text-brand-600 font-medium py-3 rounded-xl flex items-center justify-center gap-2">
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
        </svg>
        Sacar Alineadores
      </button>
    </div>
  </div>
</PhoneFrame>
