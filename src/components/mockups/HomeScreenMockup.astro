---
// Home screen mockup showing the main dashboard
import PhoneFrame from './PhoneFrame.astro';
---

<PhoneFrame>
  <!-- Status bar -->
  <div class="bg-brand-800 px-6 py-3 flex items-center justify-between">
    <span class="text-white text-xs font-medium">9:41</span>
    <div class="flex items-center gap-1">
      <div class="w-4 h-2 bg-white/80 rounded-sm"></div>
      <div class="w-4 h-2 bg-white/60 rounded-sm"></div>
    </div>
  </div>
  
  <!-- App header with gradient -->
  <div class="bg-gradient-to-b from-brand-800 to-brand-500 px-5 py-5 text-white">
    <div class="flex items-center justify-between mb-4">
      <div>
        <p class="text-brand-200 text-xs">Hola,</p>
        <p class="text-lg font-bold">Usuario</p>
      </div>
      <div class="w-9 h-9 bg-white rounded-full flex items-center justify-center">
        <svg width="18" height="18" viewBox="0 0 32 32" fill="none">
          <circle cx="12" cy="12" r="1.5" fill="#3B82F6"/>
          <circle cx="20" cy="12" r="1.5" fill="#3B82F6"/>
          <path d="M11 18c1.5 2 3.5 2 5 2s3.5 0 5-2" stroke="#3B82F6" stroke-width="1.5" stroke-linecap="round"/>
        </svg>
      </div>
    </div>
    
    <!-- Timer circle -->
    <div class="flex justify-center py-3">
      <div class="relative w-28 h-28">
        <svg class="w-full h-full -rotate-90" viewBox="0 0 100 100">
          <circle cx="50" cy="50" r="42" fill="none" stroke="rgba(255,255,255,0.2)" stroke-width="8"/>
          <circle cx="50" cy="50" r="42" fill="none" stroke="white" stroke-width="8" stroke-linecap="round" stroke-dasharray="264" stroke-dashoffset="26"/>
        </svg>
        <div class="absolute inset-0 flex flex-col items-center justify-center">
          <span class="text-2xl font-bold">21:30</span>
          <span class="text-[10px] text-brand-200">horas hoy</span>
        </div>
      </div>
    </div>
    
    <!-- Timer controls -->
    <div class="flex justify-center gap-3 mt-2">
      <button class="bg-white/20 hover:bg-white/30 text-white text-xs font-medium px-4 py-2 rounded-full">
        Registrar Remoción
      </button>
    </div>
  </div>

  <!-- Stats cards -->
  <div class="px-4 py-4 space-y-3 bg-neutral-50 flex-1">
    <!-- Weekly summary -->
    <div class="bg-white rounded-xl shadow-sm p-4">
      <div class="flex items-center justify-between mb-3">
        <h3 class="text-sm font-semibold text-neutral-900">Esta semana</h3>
        <span class="text-xs text-brand-500 font-medium">Ver más</span>
      </div>
      <div class="flex gap-1">
        <div class="flex-1 h-2 bg-success-400 rounded-full"></div>
        <div class="flex-1 h-2 bg-success-400 rounded-full"></div>
        <div class="flex-1 h-2 bg-success-400 rounded-full"></div>
        <div class="flex-1 h-2 bg-warning-400 rounded-full"></div>
        <div class="flex-1 h-2 bg-success-400 rounded-full"></div>
        <div class="flex-1 h-2 bg-success-400 rounded-full"></div>
        <div class="flex-1 h-2 bg-neutral-200 rounded-full"></div>
      </div>
      <div class="flex justify-between mt-2 text-[10px] text-neutral-400">
        <span>Lun</span>
        <span>Mar</span>
        <span>Mie</span>
        <span>Jue</span>
        <span>Vie</span>
        <span>Sáb</span>
        <span>Dom</span>
      </div>
    </div>

    <!-- Aligner progress -->
    <div class="bg-white rounded-xl shadow-sm p-4">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 bg-brand-100 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-brand-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
            </svg>
          </div>
          <div>
            <p class="text-neutral-500 text-[10px]">Alineador actual</p>
            <p class="text-neutral-900 text-sm font-bold">5 de 20</p>
          </div>
        </div>
        <div class="text-right">
          <span class="text-brand-500 text-lg font-bold">25%</span>
          <p class="text-neutral-400 text-[10px]">completado</p>
        </div>
      </div>
      <div class="mt-3 h-2 bg-neutral-100 rounded-full overflow-hidden">
        <div class="h-full bg-brand-500 rounded-full" style="width: 25%"></div>
      </div>
    </div>
  </div>
</PhoneFrame>

