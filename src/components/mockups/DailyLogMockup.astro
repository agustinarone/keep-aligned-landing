---
// Daily Log mockup based on real app - Simplified usage loading
import PhoneFrame from './PhoneFrame.astro';
---

<PhoneFrame>
  <div class="flex flex-col h-full">
    <!-- Status bar -->
    <div class="bg-brand-800 px-5 py-2 flex items-center justify-between flex-shrink-0">
      <span class="text-white text-xs font-medium">19:56</span>
      <div class="flex items-center gap-1">
        <div class="w-4 h-2 bg-white/80 rounded-sm"></div>
        <div class="w-6 h-3 bg-white/60 rounded-sm text-[6px] text-center text-white/80">47</div>
      </div>
    </div>
    
    <!-- Blurred background section (small) -->
    <div class="relative flex-shrink-0">
      <div class="blur-[1px] opacity-70">
        <!-- Header -->
        <div class="bg-gradient-to-b from-brand-800 to-brand-500 px-4 py-2">
          <div class="flex items-center gap-2">
            <div class="w-6 h-6 bg-white/20 rounded-full"></div>
            <span class="text-white/80 text-xs">Hola, Agus</span>
          </div>
          <p class="text-white/60 text-[7px] uppercase tracking-wide mt-1 mb-0.5">HOY</p>
          <div class="flex gap-1">
            <div class="bg-white/15 rounded-full px-1.5 py-0.5 flex items-center gap-0.5">
              <span class="text-warning-300 font-semibold text-[8px]">100%</span>
              <span class="text-white/60 text-[6px]">cumplimiento</span>
            </div>
            <div class="bg-white/15 rounded-full px-1.5 py-0.5 flex items-center gap-0.5">
              <span class="text-brand-100 font-semibold text-[8px]">24h 0m</span>
              <span class="text-white/60 text-[6px]">uso</span>
            </div>
          </div>
        </div>
        <!-- Aligner card -->
        <div class="px-3 py-1.5 bg-neutral-200">
          <div class="bg-neutral-400/80 rounded-lg p-2">
            <p class="text-white/80 text-[9px]"><span class="font-semibold text-white">Alineador #12</span> de 18</p>
            <div class="flex items-baseline gap-1.5">
              <span class="text-2xl font-bold text-brand-200">7</span>
              <div>
                <p class="text-white/60 text-[7px] uppercase">DÍAS RESTANTES</p>
                <p class="text-white/70 text-[8px]">Te quedan 7 días con este alineador.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Dark overlay -->
      <div class="absolute inset-0 bg-black/30"></div>
    </div>

    <!-- Modal anchored to bottom (takes remaining space) -->
    <div class="flex-1 bg-white rounded-t-3xl shadow-2xl flex flex-col -mt-2 relative z-10">
      <!-- Modal header -->
      <div class="flex items-center justify-between px-4 pt-4 pb-2 flex-shrink-0">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-brand-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <span class="font-bold text-neutral-900 text-base">Cargar día</span>
        </div>
        <button class="w-6 h-6 flex items-center justify-center text-neutral-400">
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <!-- Date selector -->
      <div class="px-4 pb-2 flex-shrink-0">
        <button class="w-full bg-brand-50 rounded-xl py-2 flex items-center justify-center gap-2">
          <svg class="w-4 h-4 text-brand-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <span class="text-brand-600 font-medium text-sm">Miércoles 24 De Diciembre</span>
          <svg class="w-4 h-4 text-brand-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </button>
      </div>

      <!-- Question -->
      <p class="text-center text-neutral-700 font-medium text-sm px-4 py-1 flex-shrink-0">¿Cómo fue tu uso de alineadores?</p>

      <!-- Options -->
      <div class="px-4 space-y-2 flex-1 overflow-hidden">
        <!-- Excelente option (selected) -->
        <div class="border-2 border-success-400 bg-success-50/50 rounded-xl p-2.5 flex items-center gap-3">
          <div class="w-10 h-10 bg-success-500 rounded-full flex items-center justify-center flex-shrink-0">
            <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <div class="flex-1 min-w-0">
            <p class="font-bold text-neutral-900 text-sm">Excelente</p>
            <p class="text-neutral-500 text-[10px]">Usé los alineadores casi todo el día</p>
            <p class="text-success-600 text-[10px] font-medium">+22h de uso</p>
          </div>
        </div>

        <!-- Regular option -->
        <div class="border border-neutral-200 rounded-xl p-2.5 flex items-center gap-3">
          <div class="w-10 h-10 bg-warning-500 rounded-full flex items-center justify-center flex-shrink-0">
            <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div class="flex-1 min-w-0">
            <p class="font-bold text-neutral-900 text-sm">Regular</p>
            <p class="text-neutral-500 text-[10px]">Uso moderado, algunas pausas largas</p>
            <p class="text-warning-600 text-[10px] font-medium">20-22h de uso</p>
          </div>
        </div>

        <!-- Bajo option -->
        <div class="border border-neutral-200 rounded-xl p-2.5 flex items-center gap-3">
          <div class="w-10 h-10 bg-error-500 rounded-full flex items-center justify-center flex-shrink-0">
            <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <circle cx="12" cy="12" r="9" stroke-width="2" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 8v4m0 4h.01" />
            </svg>
          </div>
          <div class="flex-1 min-w-0">
            <p class="font-bold text-neutral-900 text-sm">Bajo</p>
            <p class="text-neutral-500 text-[10px]">Poco uso, muchas pausas</p>
            <p class="text-error-600 text-[10px] font-medium">-20h de uso</p>
          </div>
        </div>
      </div>

      <!-- Action buttons -->
      <div class="flex gap-3 p-4 flex-shrink-0">
        <button class="flex-1 border-2 border-brand-500 text-brand-600 font-semibold py-2.5 rounded-xl text-sm">
          Cancelar
        </button>
        <button class="flex-1 bg-brand-500 text-white font-semibold py-2.5 rounded-xl flex items-center justify-center gap-2 text-sm">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          Guardar
        </button>
      </div>
    </div>
  </div>
</PhoneFrame>
