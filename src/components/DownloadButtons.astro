---
// Download buttons for App Store and Play Store
interface Props {
  size?: 'default' | 'large';
  centered?: boolean;
}

const { size = 'default', centered = false } = Astro.props;
const buttonHeight = size === 'large' ? 'h-14' : 'h-12';
---

<div id="download" class={`flex flex-col sm:flex-row gap-4 ${centered ? 'items-center justify-center' : ''}`}>
  <!-- App Store -->
  <a 
    href="https://apps.apple.com/ar/app/keep-aligned/id6755775658" 
    target="_blank"
    rel="noopener noreferrer"
    class={`inline-flex items-center gap-3 bg-neutral-900 hover:bg-neutral-800 text-white px-6 ${buttonHeight} rounded-xl transition-all hover:shadow-lg hover:-translate-y-0.5`}
  >
    <svg class="w-7 h-7" viewBox="0 0 24 24" fill="currentColor">
      <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
    </svg>
    <div class="text-left">
      <div class="text-[10px] opacity-80 leading-none">Descargar en</div>
      <div class="text-lg font-semibold leading-tight">App Store</div>
    </div>
  </a>

  <!-- Google Play -->
  <div class="relative">
    <div class="absolute -top-3 -right-2 bg-brand-500 text-white text-[10px] font-bold px-2 py-0.5 rounded-full shadow-sm border border-white z-10">
      Pr√≥ximamente
    </div>
    <a 
      href="#" 
      class={`inline-flex items-center gap-3 bg-neutral-800 text-white/50 px-6 ${buttonHeight} rounded-xl cursor-not-allowed`}
      onclick="return false;"
    >
      <svg class="w-6 h-6 opacity-50" viewBox="0 0 24 24" fill="currentColor">
        <path d="M3.609 1.814L13.792 12 3.61 22.186a.996.996 0 01-.61-.92V2.734a1 1 0 01.609-.92zm10.89 10.893l2.302 2.302-10.937 6.333 8.635-8.635zm3.199-3.198l2.807 1.626a1 1 0 010 1.73l-2.808 1.626L15.206 12l2.492-2.491zM5.864 2.658L16.8 8.99l-2.302 2.302-8.634-8.634z"/>
      </svg>
      <div class="text-left opacity-50">
        <div class="text-[10px] leading-none">Disponible en</div>
        <div class="text-lg font-semibold leading-tight">Google Play</div>
      </div>
    </a>
  </div>
</div>

